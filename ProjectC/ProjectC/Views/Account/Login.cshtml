
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_Layout1.cshtml";
}

<!doctype html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport"
		  content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>Log in</title>
</head>

<body>
	<div id="container">
		<div class="form-container sign-in-container">
			<form class="normal-container" action="/Account/Verify" method="post">
				<br>
				<h1>Log in</h1>
				<br>
				<h3>Vul uw gegevens hier in. Als u nog geen account heeft, druk dan op "Registreren"</h3>
				<br>
				<div class="agile-field-txt">
					<label><i class="fa fa-user" aria-hidden="true"></i></label>
					<input type="text" name="username" placeholder="Gebruikersnaam" required="" />
				</div>
				<div class="agile-field-txt">
					<label><i class="fa fa-unlock-alt" aria-hidden="true"></i></label>
					<input type="password" name="password" placeholder="Wachtwoord" required="" id="myInput" />
					<div class="agile_label">
						<label class="check" for="check3">Toon wachtwoord</label>
						<input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
					</div>
				</div>
				<br>
				<!-- script for show password -->
				<script>
					function myFunction() {
						var x = document.getElementById("myInput");
						if (x.type === "password") {
							x.type = "text";
						} else {
							x.type = "password";
						}
					}
				</script>
				<!-- //end script -->
				<button type="submit">Log in</button>
				
			</form>
			<form class="bottom-button-container" action="./Account/Register">
				<div class="goto">
					<button class="ghost" id="signUp">Registreren</button>
				</div>
				
			</form>
		</div>
	</div>
</body>

</html>