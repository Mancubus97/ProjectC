
@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!doctype html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport"
		  content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link rel="stylesheet" href="main.css">
	<title>Edit Innovation</title>
</head>

<body>
	<!-- deze knop gaat naar de dashboard pagina -->
	<header>
		<nav class="navbar">
			<a href="../Admin/AdminDashboardMain">Main</a>
		</nav>
	</header>

	<!--start edit-->
	<section class="order" id="order" style="padding-top: 80px">
		<div class="section-header">
			<h3 class="sub-heading">Voeg innovatie toe</h3>
			<h1 class="heading">
				NIEUWE INNOVATIE TOEVOEGEN
			</h1>
		</div>
			<form class="normal-container" action="../Admin/SaveItem" method="post">
			<div class="input-box">
				<div class="input">
					<label for="name">Hoe heet het product?</label>
					<input type="text" name="name" id="name">
				</div>
			</div>
			<div class="input-box">
				<div class="input">
					<label for="description">Meer details over het project toevoegen?</label>
					<textarea name="description" id="description" cols="30" rows="10"></textarea>
				</div>
			</div>
			<div class="input-box">
				<div class="input">
					<label for="price">
						Hoeveel kost het product per stuk? (inclusief btw/bezorgkosten/overige
						kosten)
					</label>
					<input type="number" name="price" id="pricePerPiece" min="0">
				</div>
				<div class="input">
					<label for="amount">Aantal producten?</label>
					<input type="number" name="amount" id="amount" min="0">
				</div>
			</div>
			<div class="input-box">
				<div class="input">
					<label for="implementCosts">Implementeringskosten?</label>
					<input type="number" name="implementCosts" id="implementCosts" min="0">
				</div>
				<div class="input">
					<label for="personelSavings">personel Savings?</label>
					<input type="number" name="personelSavings" id="personelSavings" min="0">
				</div>
			</div>
			<div class="input-box">
				<div class="input">
					<label for="hoursSavings">hoursSavings?</label>
					<input type="number" name="hoursSavings" id="hoursSavings" min="0">
				</div>
				<div class="input">
					<label for="implementHours">implementHours?</label>
					<input type="number" name="implementHours" id="implementHours" min="0">
				</div>
			</div>

			<div class="input-box">
				<div class="input">
					<label for="socialCosts">socialCosts?</label>
					<input type="number" name="socialCosts" id="socialCosts" min="0">
				</div>
				<div class="input">
					<label for="socialBenefits">socialBenefits?</label>
					<input type="number" name="socialBenefits" id="socialBenefits" min="0">
				</div>
			</div>
			

			<input type="submit" value="Opslaan" class="btn">
		</form>
	</section>
	<!--end edit-->

</body>

</html>