@model Innovation

@{
	ViewData["Title"] = "Item";
	Layout = "~/Views/Shared/_Layout3.cshtml";
}

<!doctype html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport"
		  content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<title>Item</title>
</head>

<body>
	<header>
		<nav class="navbar">
			<a href="../Admin/AdminDashboardMain">Main Dashboard</a>
		</nav>
		<nav class="navbar">
			<a href="#home" onclick="homeClick()">Beschrijving</a>
			<a href="#cost" onclick="costClick()">Kosten</a>
			<a href="#invest" onclick="investClick()">Opbrengsten</a>
		</nav>
	</header>

	<section class="home" id="home">
		<div class="container">
			<div class="swiper-container home-slider">
				<div class="swiper-wrapper wrapper">
					<div class="swiper-slide slide">
						<div class="content">
							<h3>@Model.name</h3>
							<h4>
								@Model.description
							</h4>
						</div>
						<div class="image">
							<img src="../images/logo.png" alt="loge image" style="width:200px; height:200px">
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!--start cost -->
	<section class="menu" id="cost">
		<div class="section-header">
			<h1 class="heading">Kosten</h1>
			<img src="../images/cost.jpg" alt="" style="width:100px; height:100px">
		</div>
		<div class="box-container">
			<div class="box">
				<div class="image">
					<img src="../images/finance.jpg" alt="" style="width:100px; height:100px">
					<h3>Financiën</h3>
				</div>
				<p>
					Besparing op de zorg kosten van patiënten die hun heupen breken. Dit is naar schatting
					<span>€15.99</span> per jaar.
				</p>
				<p>
					Besparing op de personeelskosten van patiënten die hun heupen breken. Dit is naar schatting
					<span>€47.99</span> per jaar.
				</p>
			</div>
			<div class="box">
				<div class="image">
					<img src="../images/time.jpg" alt="" style="width:100px; height:100px">
					<h3>Tijd</h3>
				</div>
				<p>Besparing op personeelskosten die minder ingezet hoeven te worden vanwege minder heupbreuken.</p>
			</div>
		</div>
	</section>
	<!--start innov -->
	<section class="menu" id="invest">
		<div class="section-header">
			<h1 class="image">Opbrengsten</h1>
			<img src="../images/revenue.jpg" alt="" style="width:100px; height:100px">
		</div>

		<div class="box-container">
			<div class="box">
				<div class="image">
					<img src="../images/finance.jpg" alt="" style="width:100px; height:100px">
					<h3>Financiën</h3>
				</div>
				<p>
					Besparing op de zorg kosten van patiënten die hun heupen breken. Dit is naar schatting
					<span>€95.99</span> per jaar.
				</p>
				<p>
					Besparing op de personeelskosten van patiënten die hun heupen breken. Dit is naar schatting
					<span>€15.99</span> per jaar.
				</p>
				<p>
					SROI (𝑚𝑎𝑎𝑡𝑠𝑐ℎ𝑎𝑝𝑝𝑒𝑙𝑖𝑗𝑘𝑒 𝑜𝑝𝑏𝑟𝑒𝑛𝑔𝑠𝑡𝑒𝑛 − 𝑚𝑎𝑎𝑡𝑠𝑐ℎ𝑎𝑝𝑝𝑒𝑙𝑖𝑗𝑘𝑒 𝑘𝑜𝑠𝑡𝑒𝑛 / 𝐼𝑛𝑖𝑡𝑖ë𝑙𝑒 𝑖𝑛𝑣𝑒𝑠𝑡𝑒𝑟𝑖𝑛𝑔𝑠𝑢𝑖𝑡𝑔𝑎𝑣𝑒)
					<span>(@Model.sroi)</span>
				</p>
			</div>
			<div class="box">
				<div class="image">
					<img src="../images/time.jpg" alt="" style="width:100px; height:100px">
					<h3>Tijd</h3>
				</div>
				<p>
					Besparing op personeelskosten die minder ingezet hoeven te worden vanwege minder heupbreuken.
				</p>
			</div>
		</div>

	</section>
</body>

</html>